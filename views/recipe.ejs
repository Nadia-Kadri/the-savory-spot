<%- include("partials/header.ejs") %>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      
      <h2><%= recipe.name %></h2>
      <p><%= recipe.date %></p>
      <p><%= recipe.description %></p>
      <h5>Ingredients:</h5>
      <ul>
        <% recipe.ingredients.forEach(ingredient => { %>
        <li><%= ingredient %></li>
        <% }) %>
      </ul>
      <h5>Instructions:</h5>
      <p><%= recipe.instructions %></p>

      <!-- Edit Button -->
      <button type="button" class="btn btn-secondary">Edit</button>
      
      <!-- Delete Button that Triggers Delete Modal -->
      <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#deleteRecipeModal">
        Delete
      </button>

      <!-- Delete Modal -->
      <div class="modal fade" id="deleteRecipeModal" tabindex="-1" aria-labelledby="deleteRecipeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Are you sure you want to delete this recipe?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <!-- Delete Button that Deletes Recipe from Server -->
              <button type="button" class="btn btn-primary" id="delete-button" 
                data-id="<%= recipe.id %>"
                data-recipe-type="<%= recipe.recipeType %>">
                  Delete Recipe
              </button>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>